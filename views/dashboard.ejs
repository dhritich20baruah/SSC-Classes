<!doctype html>
<html lang="en">
<%- include('./partials/head.ejs') %>

    <style>
        .dashboard {
            height: 78vh;
            display: flex;
            flex-direction: row;
        }

        .blogDash {
            width: 50vw;
            background-color: white;
        }

        .jobDash {
            width: 50vw;
            background-color: white;
        }
        @media only screen and (max-width: 600px){
            .dashboard {
            height: 78vh;
            display: flex;
            flex-direction: column;
        }

        .blogDash {
            height: 50vh;
            width: 80vw;
            background-color: white;
        }

        .jobDash {
            height: 50vh;
            width: 80vw;
            background-color: white;
        }
        }
    </style>

    <body>
        <%- include('./partials/nav2.ejs') %>
            <div class="container dashboard">
                <div class="container blogDash overflow-auto">
                    <h2>BLOGS</h2>
                    <% if(blog.length> 0){ %>
                        <% for (let i=blog.length-1; i>=0; i--){ %>
                            <a href="/blogs/<%= blog[i]._id%>" class="single">
                                <p class="title">
                                    <%= blog[i].blogTitle %>
                                </p>
                                <form action="/deleteblog/<%= blog[i]._id%>">
                                    <input type="submit" value="delete" class="btn btn-sm btn-danger">
                                </form>
                                <hr>
                            </a>
                            <% } %>
                                <% } %>
                </div>

                <div class="container jobDash overflow-auto">
                    <h2>JOBS</h2>
                    <% if(details.length> 0){ %>
                        <% for (let i=details.length-1; i>=0; i--){ %>
                            <p class="title">
                                <%= details[i].jobTitle %>
                            </p>
                            <form action="/deletejob/<%= details[i]._id%>">
                                <input type="submit" value="delete" class="btn btn-sm btn-danger">
                            </form>
                            <hr>
                            <% }%>
                                <% } %>
                                   
                </div>
            </div>

            <%- include('./partials/footer.ejs') %>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                    crossorigin="anonymous"></script>

    </body>

</html>