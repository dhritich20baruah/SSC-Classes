<!doctype html>
<html lang="en">

    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav2.ejs') %>

    <div class="container overflow-auto" id="record-body" style="height:78vh">
        <div class="card mb-3 my-3" style="max-width: 80vw;">
            <div class="row g-0">
                <% if(data.length> 0){ %>
                    <% for (let i=0; i<data.length; i++){ %>
                        <div class="col-md-4">
                            <img src="<%= data[i].photopath %>" class="img-fluid rounded-start" alt="student photo" style="width: 22vw">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <table class="table table-dark table-striped">
                                    <thead>
                                        <tr>
                                            <th scope="col">Item</th>
                                            <th scope="col">Details</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <tr>
                                            <th scope="row">Name</th>
                                            <td>
                                                <%=data[i].name %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Address</th>
                                            <td>
                                                <%=data[i].address %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Parent's name</th>
                                            <td>
                                                <%=data[i].parent %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Phone</th>
                                            <td>
                                                <%=data[i].studentPhone %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Parent's Phone</th>
                                            <td>
                                                <%=data[i].parentPhone %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Batch</th>
                                            <td>
                                                <%=data[i].batch %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Course</th>
                                            <td>
                                                <%=data[i].course %>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th scope="row">Action</th>
                                            <td>
                                                <form action="/deleterecord/<%= data[i]._id%>">
                                                    <input type="submit" value="delete" class="btn btn-danger">
                                                </form>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <% }%>
                            <% } %>
            </div>
        </div>
    </div>


    <div class="card-footer border-success bg-dark" style="color: yellow;" position-fixed-bottom> S.S.C.C.| Website
        developed by dhritibaruah
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

</body>

</html>