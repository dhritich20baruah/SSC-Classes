<!doctype html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <style>
      a{
        text-decoration: none;
      }
      h4, p{
        color: black;
      }
      h2{
        text-align: center;
        color: #0d6efd;
      }
    </style>
   
  <div class="blogsContent container overflow-auto" style="height: 80vh">
  <h2>BLOGS</h2>
  <% if(blog.length> 0){ %>
    <% for (let i=blog.length-1; i>=0; i--){ %>
      <a href="/blogs/<%= blog[i]._id%>" class="single">
      <h4 class="title fs-2"><%= blog[i].blogTitle %></h4>
      <p class="text-danger"><%= blog[i].createdAt.toLocaleDateString() %></p>
      <p class='Snippet fst-italic fw-semibold fs-5'><%= blog[i].blogSnippet %></p>
      <hr>
    </a>
    <% } %>
    <% } %>
  </div>

  <%- include('./partials/footer.ejs')%>
    
 
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>


</body>

</html>

